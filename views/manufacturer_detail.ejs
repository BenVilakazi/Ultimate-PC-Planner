<% layout('layout') -%>

<section class="title">
    <h1><%= title %></h1>
    <button id="dropdown"><i class="fas fa-caret-down"></i></button>
    <div class="edit-links collapsed">
        <a href="<%= manufacturer.url%>/update"><i class="fas fa-wrench"></i><span class="widescreen">Update</span></a>
        <a href="<%= manufacturer.url%>/delete"><i class="fas fa-trash"></i><span class="widescreen">Delete</span></a>
    </div>
</section>
<section>
        <p class="description"><%= manufacturer.description %></p>
</section>
<section class="filter-section">
    <div id="numProductsContainer"><span id="numProducts"><%= manufacturer_parts.length %></span> product(s)</div>
    <form id="filterForm">
        <fieldset>
            <legend for="filter">SEARCH</legend>
            <input type="text" name="filter" id="filter" placeholder="<%= manufacturer.name %>">
        </fieldset>
    </form>
</section>
<div class="wide-screen-bg">
<table cellspacing="0" id='manufacturer-table'>
    <thead>
        <tr>
            <th><span>Name</span></th>
            <th><span>Category</span></th>
            <th data-sort-method='number'><span>Stock</span></th>
            <th data-sort-method='number' colspan="2"><span>Price</span></th>
        </tr>
    </thead>
    <tbody>
        <tr id="notFound" class="<%= manufacturer_parts.length == 0 ? '' : 'hidden' %>">
            <td colspan="5"><i class="fas fa-sad-tear"></i></td>
        </tr>
        <% manufacturer_parts.forEach(part => { %>
        <tr class="part-row" data-part="<%= part.name %>">
            <td class="part-name">
                <div class="part-name-container">
                    <div class="list-image-container">
                      <% if (part.fileName) { %>
                        <a href="<%= part.url %>">
                          <img src="/images/<%= part.fileName %>" alt="">
                        </a>
                      <% } else { %>
                        <div class="imgNotFound"><i class="fas fa-question"></i></div>
                      <% } %>
                      
                    </div>
                    <div class="th-small">Name</div>
                    <a href="<%= part.url %>"><%= part.name %></a>
                  </div>
            </td>
            <td class="part-category">
                <div class="th-small">Category</div>
                <a href="<%= part.category.url %>"><%= part.category.title %></a>
            </td>
            <td class="part-stock">
                <div class="th-small">Stock</div>
                <span class="inStock amount"><%= part.inStock %></span>
            </td>
            <td class="part-price">
                <div class="th-small">Name</div>
                <span class="amount">$<%= part.price %></span>
            </td>
            <td class="part-add">
                <button class="yellow-btn add" data-categoryid="<%= part.category._id %> " data-partid='<%= part._id %>'>Add</button>
            </td>
        </tr>
        <% }) %>
    </tbody>
    <tfoot>
        <tr>

        </tr>
    </tfoot>
</table>
</div>

<% block('scripts', "<script type='text/javascript' src='/javascripts/searchFilter.js'></script>") -%>
<% block('scripts', "<script type='text/javascript' src='/javascripts/dropdown.js'></script>") -%>
<% block('scripts', "<script type='text/javascript' src='/javascripts/updateCookie.js'></script>") -%>
<% block('scripts', "<script type='text/javascript' src='/javascripts/tablesort.min.js'></script> <script type='text/javascript' src='/javascripts/tablesort.number.min.js'></script> <script>new Tablesort(document.getElementById('manufacturer-table'));</script> ") -%>

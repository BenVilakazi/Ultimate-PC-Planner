<% layout('layout') -%>
<div class="wide-screen-bg">
<section class="title">
  <h1><%= title %>
  </h1>
  <a href="/category/create" class="create-link">
    <i class="fas fa-plus"></i>
  </a>
</section>

<section class='create-section'><a href="/category/create" class="create-link"><i class="las la-plus"></i> New category</a></section>
